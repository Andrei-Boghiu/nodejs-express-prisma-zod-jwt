{
  "name": "nodejs-express-prisma-zod-jwt",
  "version": "1.0.0",
  "description": "A Node.js REST API using Express, Prisma ORM, Zod validation, and JWT authentication.",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "prisma:dev": "npx prisma migrate reset --force && npx prisma migrate dev --name auto && npx prisma generate",
    "prisma:prod": "npx prisma generate && npx prisma migrate deploy"
  },
  "keywords": [
    "node",
    "express",
    "prisma",
    "zod",
    "jwt",
    "authentication",
    "rest-api",
    "secure-api",
    "backend"
  ],
  "author": {
    "name": "Andrei Boghiu",
    "url": "https://github.com/Andrei-Boghiu"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/Andrei-Boghiu/nodejs-express-prisma-zod-jwt"
  },
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0"
  }
}
